  "description": "CS3219 OTOT Task B",
  "dependencies": {
    "body-parser": "^1.18.1",
    "dotenv": "^8.2.0",
    "express": "^4.15.4",
    "morgan": "^1.10.0",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/morgan": "^1.9.1",
    "@types/node": "^8.0.29",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
